# Environment configuration per sviluppo Mac
# Frontend: atlante.local:3000, API: atlante.local:8080 (Spring Boot diretto)

# Node environment
NODE_ENV=development

# Frontend configuration
NUXT_PUBLIC_FRONTEND_HOST=atlante.local
NUXT_PUBLIC_FRONTEND_PORT=3000

# API configuration (Spring Boot diretto su porta 8080)
NUXT_PUBLIC_API_BASE=http://atlante.local:8080
NUXT_PUBLIC_API_HOST=atlante.local
NUXT_PUBLIC_API_PORT=8080

# Debug mode
NUXT_DEBUG=true

# Sviluppo specifico
HOST=0.0.0.0
PORT=3000

# Hot Module Replacement
CHOKIDAR_USEPOLLING=true