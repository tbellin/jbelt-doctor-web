# Production Environment Configuration for JBelt Doctor Web
# ========================================================

# Database Configuration
DB_PASSWORD=jbelt_secure_password_2025
POSTGRES_DB=jbeltMapSrv
POSTGRES_USER=jbeltMapSrv

# PgAdmin Configuration
PGADMIN_PASSWORD=admin_secure_password_2025

# Frontend Configuration
NUXT_PUBLIC_API_BASE=http://localhost
NUXT_PUBLIC_API_HOST=jbelt.org
NUXT_PUBLIC_API_PORT=80
NUXT_PUBLIC_FRONTEND_HOST=jbelt.org
NUXT_PUBLIC_FRONTEND_PORT=80
NUXT_DEBUG=false
NODE_ENV=production

# Spring Boot Configuration
SPRING_PROFILES_ACTIVE=prod,api-docs
SPRING_DATASOURCE_USERNAME=jbeltMapSrv
SPRING_DATASOURCE_PASSWORD=jbelt_secure_password_2025

# Java Options
JAVA_OPTS=-Xmx512m -Xms256m

# Security
MANAGEMENT_PROMETHEUS_METRICS_EXPORT_ENABLED=true

# SSL/TLS (optional - configure when needed)
# SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
# SSL_KEY_PATH=/etc/nginx/ssl/private.key

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=7

# Network
COMPOSE_PROJECT_NAME=jbelt-doctor-production